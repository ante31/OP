//Napi≈°ite funkciju koja stringove, koje korisnik unosi, sprema u vektor stingova,
//svaki string preokrene te sortira vektor po preokrenutim stringovima

#include <iostream>
#include <vector>
#include <algorithm>


using namespace std;

void vector_function(char* element, vector <string> &v1)
{
    //reversing a string
    int i, n;
    char temp;
    
    n = strlen(element) - 1;
    for (i = 0; i < (strlen(element) / 2); i++)
    {
        temp = element[i];
        element[i] = element[n];
        element[n] = temp;
        n--;
    }

    v1.push_back(element);
    sort(v1.begin(), v1.end());
}

int main()
{
    vector <string> v1;
    int number_of_elements;
    char element[100];
    cout << "unesite broj stringova: " << endl;
    cin >> number_of_elements;
    for (int i = 0; i < number_of_elements; i++)
    {
        cin >> element;
        vector_function(element, v1);
    }      
    for (int i = 0; i < v1.size(); i++)
        cout << v1[i] << "\n";
}
